# nord bspwm polybar config

[colors]
background = #2E3440
foreground = #D8DEE9
dark-gray = #4C566A
light-gray = ##E5E9F0
red = #BF616A
green = #A3BE8C
yellow = #EBCB8B
blue = #81a1c1
cyan = #88c0d0
primary = #88c0d0
background-alt = ${colors.dark-gray}
foreground-alt = ${colors.light-gray}

[bar/main]
monitor = ${env:MONITOR:}
width = 100%
height = 25
radius = 0
fixed-center = false
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 2
border-size = 0
border-color = #00000000
padding-left = 0
padding-right = 1
module-margin-left = 1
module-margin-right = 1
font-0 = Hack:pixelsize=12;1
font-1 = Hack:pixelsize=12;1
font-2 = Hack:pixelsize=12;1
modules-left = bspwm
modules-center = 
modules-right = pulseaudio cpu wlan eth battery temperature date
wm-restack = bspwm
override-redirect = false
cursor-click = pointer
cursor-scroll = ns-resize

[module/bspwm]
type = internal/bspwm
label-focused = %name%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 1
label-occupied = %name%
label-occupied-padding = 1
label-urgent = %name%!
label-urgent-background = ${colors.yellow}
label-urgent-padding = 1
label-empty = %name%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 1

[module/xbacklight]
type = internal/xbacklight
format = <label>
label = BL

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/cpu]
type = internal/cpu
interval = 2
format-underline = ${colors.green}
label = %percentage:2%%

[module/wlan]
type = internal/network
interface = wlp5s0
interval = 3.0
format-connected = <label-connected>
format-connected-underline = ${colors.cyan}
label-connected = %essid%

[module/eth]
type = internal/network
interface = enp0s31f6
interval = 3.0
format-connected-underline = ${colors.cyan}
label-connected = %local_ip%

[module/date]
type = internal/date
interval = 1
time = %H:%M:%S
time-alt = %Y-%m-%d
format-underline = ${colors.blue}
label = %time%

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <label-volume>
label-volume = VOL %percentage%%
label-volume-foreground = ${root.foreground}
label-muted = MUTE
label-muted-foreground = ${colors.foreground-alt}
bar-volume-empty-foreground = ${colors.foreground-alt}
format-muted-underline = ${colors.green}
format-volume-underline = ${colors.blue}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 100
format-charging = <label-charging>
format-charging-underline = ${colors.yellow}
format-discharging = <label-discharging>
format-discharging-underline = ${colors.blue}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 75
format = <label>
format-underline = ${colors.green}
format-warn = <label-warn>
format-warn-underline = ${colors.yellow}
label = %temperature-c%

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5
