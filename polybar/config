# nord bspwm polybar config

[colors]
alpha = #00000000
background = #2E3440
foreground = #D8DEE9
dark-gray = #4C566A
light-gray = #E5E9F0
red = #BF616A
green = #A3BE8C
yellow = #EBCB8B
blue = #81a1c1
cyan = #88c0d0
primary = ${colors.blue}
background-alt = ${colors.dark-gray}
foreground-alt = ${colors.light-gray}
alert = ${colors.yellow}

[bar/left]
monitor = ${env:MONITOR:}
width = 9.5%
height = 30
radius = 0
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3
offset-x = 24
offset-y = 12
border-size = 0
border-color = ${colors.alpha}
border-transparent = true
padding-left = 1
padding-right = 2
module-margin-left = 1
module-margin-right = 2
font-0 = JetBrainsMono Nerd Font:pixelsize=12;3
font-1 = JetBrainsMono Nerd Font:pixelsize=10;3
modules-center = bspwm
wm-restack = bspwm
override-redirect = false
cursor-click = pointer
cursor-scroll = ns-resize

[bar/center]
width = 3.5%;
# 50% - (w / 2)
offset-x = 48.25% 
inherit = bar/left
modules-center = time

[bar/right]
inherit = bar/left
width = 18%
offset-x = 82%:-24
modules-center = pulseaudio updates wlan eth battery temperature date

[module/bspwm]
type = internal/bspwm

label-focused = %icon%
label-focused-background = ${colors.background}
label-focused-foreground = ${colors.primary}
label-focused-padding = 1
label-focused-font = 2

label-occupied = %icon%
label-occupied-padding = 1
label-occupied-foreground = ${colors.foreground}
label-occupied-font = 2

label-urgent = %icon%
label-urgent-foreground = ${colors.alert}
label-urgent-padding = 1
label-urgent-font = 2

label-empty = %icon%
label-empty-background = ${colors.background}
label-empty-foreground = ${colors.dark-gray}
label-empty-padding = 1
label-empty-font = 2

ws-icon-default = ﱢ
ws-icon-default-font = 2


[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3.0
format-connected = <label-connected>
format-connected-prefix = "直 "
format-connected-prefix-foreground = ${colors.primary}
label-connected = %essid%

[module/eth]
type = internal/network
interface = enp0s31f6
interval = 3.0
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.primary}
label-connected = %local_ip%

[module/time]
type = internal/date
interval = 5
time = %H:%M
format-prefix = " "
format-prefix-foreground = ${colors.primary}
label = %time%

[module/date]
type = internal/date
interval = 5
date = "%d/%m"
format-prefix = " "
format-prefix-foreground = ${colors.primary}
label = %date%

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <label-volume>
label-volume = %percentage%%
label-volume-foreground = ${root.foreground}
label-muted = MUTE
label-muted-foreground = ${colors.foreground-alt}
format-volume-prefix = "墳 "
format-muted-prefix = "婢 "
format-volume-prefix-foreground = ${colors.primary}
format-muted-prefix-foreground = ${colors.green}
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 100
format-charging = <label-charging>
format-discharging = <label-discharging>
format-charging-prefix = " "
format-discharging-prefix = " "
format-charging-prefix-foreground = ${colors.yellow}
format-discharging-prefix-foreground = ${colors.primary}

[module/temperature]
type = internal/temperature
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input
thermal-zone = 0
warn-temperature = 75
format = <label>
format-warn = <label-warn>
format-prefix = " "
format-warn-prefix = " "
format-prefix-foreground = ${colors.primary}
format-warn-prefix-foreground = ${colors.red}
label = %temperature-c%

[module/updates]
type = custom/script
exec = ~/.config/polybar/updates.sh
format-prefix = " "
format-prefix-foreground = ${colors.primary}
interval = 90

[settings]
screenchange-reload = true
pseudo-transparency = true

[global/wm]
margin-top = 0
margin-bottom = 0
