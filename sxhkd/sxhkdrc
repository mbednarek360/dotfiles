####### System Hotkeys ########

# program launcher
super + r
  sh -c "$LAUNCH"

# terminal
super + Return
  sh -c "$TERM"

# power menu
super + shift + p
	~/.config/sxhkd/power

# calculator
XF86Calculator
    sh -c "$CALC"
super + c
    sh -c "$CALC"              

# keyboard layout
super + {alt, ctrl} + space
    setxkbmap us {_, -variant colemak}

# screen/window/selection shot
@Print
    maim -u /tmp/scr.png; cat /tmp/scr.png | xclip -selection clipboard -t image/png; notify-send 'Screen Copied' 

shift + @Print
     maim -u -i $(xdotool getactivewindow) /tmp/scr.png; cat /tmp/scr.png | xclip -selection clipboard -t image/png; notify-send 'Window Copied'
    
ctrl + @Print
    maim -u -s /tmp/scr.png; cat /tmp/scr.png | xclip -selection clipboard -t image/png; notify-send 'Selection Copied'

# save screenshot
alt + @Print
    mv /tmp/scr.png ~/Pictures/Screenshots/$(date +%y-%m-%d_%H:%M:%S).png; notify-send "Saved to Pictures"

# record screen
super + v
    rm /tmp/rec.mp4; ffmpeg -video_size 2560x1440 -framerate 30 -f x11grab -i :0.0+$(xrandr --query | grep primary | cut -d"+" -f2-3 | cut -d" " -f1 | tr "+" ",") /tmp/rec.mp4 &; notify-send "Recording Started"

super + ctrl + v
    killall -s INT ffmpeg; notify-send "Recording Stopped"

# save recording
super + alt + v
    mv /tmp/rec.mp4 ~/Pictures/Recordings/$(date +%y-%m-%d_%H:%M:%S).mp4; notify-send "Saved to Pictures"

# kill compositing
super + alt + c
    killall picom

# music controls
{XF86AudioRaiseVolume, XF86AudioLowerVolume}
	pactl set-sink-volume $(pacmd list-sinks | grep index | tail -c 2) {'+5%', '-5%'}
XF86AudioMute
	pactl set-sink-mute $(pacmd list-sinks | grep index | tail -c 2) toggle & playerctl play-pause
{XF86AudioNext, XF86AudioPrev}
	playerctl {next, previous}
XF86AudioPlay
	playerctl play-pause
XF86AudioStop
	playerctl stop
 
# backlight
{XF86MonBrightnessUp, XF86MonBrightnessDown}
	xbacklight {-inc, -dec} 2.5



####### BSPWM Hotkeys ########

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {shift,ctrl} + q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + z
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
	bspc node -s biggest --follow

# set the window state
super + {t,ctrl + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# focus the node in the given direction
super + {Left, Down, Up, Right}
	bspc node -f {west,south,north,east}

# move the node in the given direction
super + shift+ {Left, Down, Up, Right}
    bspc node -s {west,south,north,east} --follow

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous monitor
super + bracket{left,right}
	bspc monitor -f {prev,next}

# move node to next/previous monitor
super + shift + bracket{left,right}
    bspc node -m {prev,next} --follow

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_, ctrl} + {1-9}
	bspc {desktop -f,node -d} '{1-9}'
super + {_, ctrl} + KP_{1-9}
	bspc {desktop -f,node -d} '{1-9}'

# send and follow
super + shift + {1-9}
    bspc node -d '{1-9}' --follow
super + shift + KP_{1-9}
    bspc node -d '{1-9}' --follow

# rotate node
super + shift + r
    bspc node @/ -R 90

# cycle node focus
super + {_, shift} + a
    bspc node -f {next,prev}.local

# preselect the direction
super + ctrl + {Left, Down, Up, Right}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + alt + {1-9}
	bspc node -o 0.{1-9}
super + alt + KP_{1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + Escape
	bspc node -p cancel
	
# expand a window by moving one of its side outward
super + alt + {Left, Down, Up, Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + ctrl + alt + {Right, Up, Down, Left}
	bspc node -z {left 20 0,bottom 0 -20,top 0 20,right -20 0}

# move a floating window
super + shift + ctrl + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
                        


####### Application Hotkeys ########

# browser
super + shift + f
  sh -c "$BROWSE"

# editor
super + shift + e
  sh -c "$EDIT"

# games
super + shift + g
  sh -c "$GAME"

# network manager
super + shift + w
  sh -c "$NET"

# system manager
super + shift + x
  sh -c "$SYS"

# music application
super + shift + s
  sh -c "$MUSIC"

# communication
super + shift + d
  sh -c "$DISCORD"

super + shift + v
  sh -c "$VIS"

# sync code
super + ctrl + s
  sh -c "$SYNC"

# mblock status
super + l
	zsh -c "source ~/.config/zsh/aliases.sh && mblock -s"

# mblock toggle
super + ctrl + l
	zsh -c "source ~/.config/zsh/aliases.sh && mblock -t"