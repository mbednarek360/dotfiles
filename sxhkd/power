#!/bin/sh
# rofi power menu

chosen=$(echo "Lock\nShutdown\nReboot\nSuspend\nHibernate" | rofi -dmenu -i -lines 5)
if [ $chosen = "Lock" ]; then
    betterlockscreen --lock -- --timestr '%l:%H:%S'
elif [ $chosen = "Shutdown" ]; then
    sudo shutdown -h now
elif [ $chosen = "Reboot" ]; then
    sudo shutdown -r now
elif [ $chosen = "Suspend" ]; then
    betterlockscreen --lock -- --timestr '%l:%H:%S'
    sudo zzz
elif [ $chosen = "Hibernate" ]; then
    betterlockscreen --lock -- --timestr '%l:%H:%S'<Paste>
    sudo ZZZ
fi
